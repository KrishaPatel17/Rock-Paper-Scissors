#Game version 1
repeat = 'yes'
while (repeat == 'yes'):
  #Randomizing computar choice
  import random

  #player's choice
  player = input("Pick one! (rock, paper, or scissors):")
  possible_actions = ["rock", "paper", "scissors"]

  #computars choice
  computar = random.choice(possible_actions)
  print(f"\n You chose {player}, computer chose {computar}.\n")
  #If -> Then -> Else

  #Who wins / tie
  if player == computar:
    print(f"Both players selected {player}. It's a tie!")
  #Rock
  elif player == "rock":
    if computar == "scissors":
      print("Rock smashes scissors! You win!")
    else:
      print("Paper covers rock! You lose.")
  #Paper
  elif player == "paper":
    if computar == "rock":
      print("Paper covers rock! You win!")
    else:
      print("Scissors cuts paper! You lose.")
  #Scissors
  elif player == "scissors":
    if computar == "paper":
      print("Scissors cuts paper! You win!")
    else:
      print("Rock smashes scissors! You lose.")

  print('------------------')
  repeat = input("Would you like to play again? (yes or no): ")

print("Thank you for playing!")

